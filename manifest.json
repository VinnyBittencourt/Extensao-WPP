{
	"manifest_version": 2,
	"name": "Whats Block",
	"description": "Bloqueador de Informações WhatsappWeb",
	"version":"1.0",
	"permissions": [
	  "tabs"
	],
	"content_scripts": [
	{
		"matches": [
			"<all_urls>"
		],
		"js":["content.js"],
		"run_at": "document_end"
	}
	],
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon.png"
	}
}